#!/bin/bash
#
# Generates symbolic links that point to the 
# scripts in this git repo.

PROGRAM_NAME="$(basename "$0")"
# for reference, usage str for ln
# Usage: ln [OPTION]... TARGET LINK_NAME
#
# NOTE: LINK_DIR is the location for symlink(s)
# that points to the f(s)/file(s) in this git repo
LINK_DIR=
for f in ./*
do
    # removing the $PWD notation './' from the file name
    f="${f:2:${#f}}"
    case "$f" in
        "${PROGRAM_NAME}")      ;;
        "README.md")            ;;
        "LICENSE")              ;;
        *)                      ln --symbolic --force "${PWD}/${f}" "${LINK_DIR}/$f"
                                ;;
    esac
done

exit 0
